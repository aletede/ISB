<Window x:Class="ISB.DirWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Seleziona cartella" Height="150" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
        <GroupBox Header="Percorso cartella">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="pathTextBox" Width="250" Margin="10" FontSize="11" ToolTip="ex. C:\Program Files (x86)\Adobe"/>
                <Button Content="Cerca" Width="70" Margin="10" Click="btnOpen_Click" FontSize="11"/>
            </StackPanel>
        </GroupBox>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="OK" Width="70" Margin="10" IsDefault="True" Click="btnOK_Click" FontSize="11"/>
            <Button Content="Annulla" Width="70" Margin="10" IsCancel="True" FontSize="11"/>
        </StackPanel>
    </StackPanel>
</Window>
